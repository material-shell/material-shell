{
    "version": "1.1.0",
    "compileOnSave": true,
    "compilerOptions": {
        "module": "es2020",
        "target": "es2018",
        "outDir": "./build",
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "lib": ["es2018"],
        "pretty": true,
        "sourceMap": false,
        "declaration": false,
        "removeComments": true,
        "incremental": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "allowJs": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "baseUrl": ".",
        "paths": {
            "glib": ["types/glib"],
            "gio": ["types/gio"],
            "clutter": ["types/clutter"],
            "gobject": ["types/gobject"],
            "cogl": ["types/cogl"],
            "gdk": ["types/gdk"],
            "gnomedesktop": ["src/types/gnome_desktop"],
            "gtk": ["types/gtk"],
            "shell": ["src/types/shell"],
            "soup": ["types/soup"],
            "ui": ["src/types/ui"],
            "st": ["types/st"],
            "meta": ["types/meta", "src/types/meta"],
            "gjs": ["src/types/gjs"]
        },
        "experimentalDecorators": true
    },
    "include": ["src/**/*.ts"]
}
